{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esNext",
    "target": "es6",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "lib": [
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": false,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ]
}
